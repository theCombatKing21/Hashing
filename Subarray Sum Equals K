class Solution {
    public int subarraySum(int[] nums, int k) {
        Map<Integer, Integer> hm = new HashMap<>();

        hm.put(0, 1);

        int res = 0;
        int pSum = 0;

        for (int x : nums) {
            pSum += x;

            if (hm.containsKey(pSum - k)) {
                res = res + hm.get(pSum - k);
            }
            hm.put(pSum, hm.getOrDefault(pSum, 0) + 1);
        }
        return res;
    }
}
